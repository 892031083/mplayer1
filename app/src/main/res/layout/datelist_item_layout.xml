<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="120dp"
    android:padding="2.5dp"
    android:gravity="center"
    android:layout_height="300dp">
    <ImageView
        android:adjustViewBounds="true"
        android:id="@+id/detalist_item_img"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="145dp"/>
    <ImageView
        android:layout_alignTop="@id/detalist_item_img"
        android:layout_marginTop="3dp"
        android:layout_marginRight="3dp"
        android:id="@+id/teaser"
        android:background="@android:color/white"
        android:visibility="gone"
        android:layout_alignRight="@id/detalist_item_img"
        android:src="@mipmap/icon_teaser"
        android:layout_width="28dp"
        android:scaleType="fitXY"
        android:layout_height="14dp"/>
    <TextView
        android:id="@+id/tip"
        android:textColor="@android:color/white"
        android:padding="4dp"
        android:text=""
        android:textSize="12sp"
        android:layout_alignBottom="@id/detalist_item_img"
        android:layout_width="120dp"
        android:layout_height="wrap_content"/>
    <TextView

        android:layout_alignRight="@id/detalist_item_img"
        android:id="@+id/score"
        android:textColor="#E9400B"
        android:padding="4dp"
        android:text=""
        android:textSize="12sp"
        android:layout_alignBottom="@id/detalist_item_img"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/detalist_item_img"
        android:minHeight="50dp"
        android:layout_marginTop="10dp"
        android:id="@+id/detalist_item_title"
        android:text="这里是标题"
        android:textSize="14sp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</RelativeLayout>