<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:padding="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="160dp">
    <ImageView
        android:id="@+id/album_image"
        android:scaleType="fitXY"
        android:layout_width="120dp"
        android:layout_height="145dp"/>
    <TextView
        android:paddingTop="15dp"
        android:id="@+id/album_Name"
        android:text=""
        android:textSize="16dp"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/album_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_below="@id/album_Name"
        android:id="@+id/album_ator"
        android:text=""
        android:textSize="13dp"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/album_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/album_mainator"
        android:layout_below="@id/album_ator"
        android:text=""
        android:textSize="13sp"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/album_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/album_score"
        android:layout_below="@id/album_mainator"
        android:text=""
        android:textSize="13sp"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/album_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_marginTop="8dp"
        android:id="@+id/album_total"
        android:layout_below="@id/album_score"
        android:text=""
        android:textSize="12sp"
        android:singleLine="true"
        android:layout_marginLeft="20dp"
        android:layout_toRightOf="@id/album_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
</RelativeLayout>