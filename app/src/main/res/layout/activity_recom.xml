<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <LinearLayout
    android:layout_alignParentStart="true"
    android:background="#4B4646"
    android:padding="12dp"
    android:id="@+id/headd"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <Button
        android:id="@+id/tt1"
        android:textColor="@color/recom_text_click"
        android:textSize="13sp"
        android:background="@drawable/defulpas"
        android:text="成人短片"
        android:layout_width="80dp"
        android:layout_height="30dp"/>
    <Button
        android:id="@+id/tt2"
        android:textColor="@color/recom_text_clickno"
        android:textSize="13sp"
        android:background="@drawable/reno"
        android:layout_marginLeft="30dp"
        android:text="成人动漫"
        android:layout_width="80dp"
        android:layout_height="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_below="@id/headd"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rectview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </LinearLayout>
</RelativeLayout>